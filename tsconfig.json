{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "index.ts", "cypress/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
