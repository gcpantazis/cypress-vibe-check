{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "index.ts", "cypress/**/*.ts", "index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
